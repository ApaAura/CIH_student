@model List<Student>
<div class="container">
    <h2>Lista Studentilor</h2>
    @if (!(Model.Count == 0))
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Nume</th>
                    <th>Prenume</th>
                    <th>Grupa</th>
                    <th>Nota</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var student in Model)
                {
                    <tr>
                        <td>@student.Nume</td>
                        <td>@student.Prenume</td>
                        <td>@student.Grupa</td>
                        <td>@student.Nota</td>
                        <td class="d-flex">
                            @Html.ActionLink("Edit","Edit","Home",new {@id = student.ID},new {@class="btn btn-block btn-primary mx-2"})
                            @using (Html.BeginForm("Delete", "Home", new { @id = student.ID }, FormMethod.Post))
                            {
                                <input class="btn btn-block btn-danger" type="submit" value="Delete">
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <h3>Nu sunt inregistrati studenti !</h3>
    }

</div>