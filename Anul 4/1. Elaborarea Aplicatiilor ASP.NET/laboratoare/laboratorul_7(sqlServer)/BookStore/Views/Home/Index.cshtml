@{
    ViewData["Title"] = "Home Page";
}
@model List<Book>

<div class="row">
    @foreach( var el in Model)
    {
        <div class="col-lg-3 col-md-6">
            <div class="card my-2 shadow">
                <img class="card-img-top img-card" src="~/Images/@el.Path">
                <div class="card-body">
                    <h5 class="card-title">@el.Title</h5>
                    <div class=" row">
                        <p class="col-7">@el.Author</p>
                        <p class="col-7">@el.Editura</p>
                        <p class="col-5">@el.Price mdl</p>
                    </div>
                </div>
            </div>
        </div>
    }        
</div>
