<Window x:Class="Problema_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Problema_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Background="LightGray" Opacity="0.7" >
        <Label
            Margin="10"
            FontWeight="Bold"
            FontSize="20">
            Selectati anotimpul :
        </Label>
        <RadioButton GroupName="Anotimpuri" Content="Iarna" FontSize="18" Checked="RadioButton_Checked"/>
        <RadioButton GroupName="Anotimpuri" Content="Primavara" FontSize="18" Checked="RadioButton_Checked_1"/>
        <RadioButton GroupName="Anotimpuri" Content="Vara" FontSize="18" Checked="RadioButton_Checked_2"/>
        <RadioButton GroupName="Anotimpuri" Content="Toamna" FontSize="18" Checked="RadioButton_Checked_3"/>
        <DatePicker x:Name="DataZodie" Margin="20" Padding="5" Background="AliceBlue" SelectedDateChanged="DatePicker_SelectedDateChanged" />
    </StackPanel>
</Window>
