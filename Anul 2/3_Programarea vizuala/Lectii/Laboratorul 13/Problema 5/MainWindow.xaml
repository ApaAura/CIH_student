<Window x:Class="Problema_5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Problema_5"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Label
        Margin="10"
        FontWeight="Bold"
        FontSize="18">
            Selectați limbajul de programare preferat.
        </Label>
        <RadioButton
        GroupName="Limbaje"
        Content="C#"
        FontSize="16"
        />
        <RadioButton
        GroupName="Limbaje"
        Content="C/C++"
        FontSize="16"
        />
        <RadioButton
        GroupName="Limbaje"
        Content="Java"
        FontSize="16"
        />
        <RadioButton
        GroupName="Limbaje"
        Content="PHP"
        FontSize="16"
        />
        <RadioButton
        GroupName="Limbaje"
        Content="Python"
        FontSize="16"
        />
    </StackPanel>
</Window>
