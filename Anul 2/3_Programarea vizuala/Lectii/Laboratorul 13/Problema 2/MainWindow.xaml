        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Problema_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Button x:Name="button">
            <StackPanel>
                <TextBlock Text="Un set de butoane" FontSize="25"/>
                <Button Background="Red" Height="20" Content="Red" Margin="3"/>
                <Button Background="Yellow" Height="20" Content="Yellow" Margin="3"/>
                <Button Background="Green" Height="20" Content="Green" Margin="3"/>
            </StackPanel>
        </Button>
    </StackPanel>
</Window>
