<Window x:Class="Sarcina_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sarcina_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <Label
            Margin="10"
            FontWeight="Bold"
            FontSize="20">
            Selectati culoarea :
        </Label>
        <RadioButton GroupName="Culori" Content="Red" FontSize="18" Checked="RadioButton_Checked"/>
        <RadioButton GroupName="Culori" Content="Green" FontSize="18" Checked="RadioButton_Checked_1"/>
        <RadioButton GroupName="Culori" Content="Gray" FontSize="18" Checked="RadioButton_Checked_2"/>
        <RadioButton GroupName="Culori" Content="Blue" FontSize="18" Checked="RadioButton_Checked_3"/>
        <RadioButton GroupName="Culori" Content="Yellow" FontSize="18" Checked="RadioButton_Checked_4"/>
        <RadioButton GroupName="Culori" Content="White" FontSize="18" Checked="RadioButton_Checked_5"/>
    </StackPanel>
</Window>
