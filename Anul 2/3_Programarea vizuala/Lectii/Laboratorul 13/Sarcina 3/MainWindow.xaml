<Window x:Class="Sarcina_3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sarcina_3"
        mc:Ignorable="d"
        Title="ShowHide" Height="450" Width="800">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="520" >
        <Button Content="SHOW" Margin="20" FontSize="25" Background="Green" Click="Button_Click"/>
        <Button Content="HIDE" Margin="20" FontSize="25" Background="Red" Click="Button_Click_1"/>
        <Button x:Name="BTN" Content="SHOW/HIDE" Margin="40" FontSize="25"/>
    </StackPanel>
</Window>
