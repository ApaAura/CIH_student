<Window x:Class="Sarcina_1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Sarcina_1"
        mc:Ignorable="d"
        Title="MainWindow" Height="265" Width="600">
    <StackPanel HorizontalAlignment="Stretch" 
                VerticalAlignment="Stretch"
                Background="White">
        <Button Background="#FFB4FFFA" Padding="10" Margin="10" Click="Button_Click">Button 1</Button>
        <Button Background="#FF74ABA5" Padding="10" Margin="10" Click="Button_Click_1">Button 2</Button>
        <Button Background="#FF509A91" Padding="10" Margin="10" Click="Button_Click_2">Button 3</Button>
        <Button Background="#FF124142" Padding="10" Margin="10" Click="Button_Click_3">Button 4</Button>
    </StackPanel>
</Window>
