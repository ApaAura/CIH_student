<Window x:Class="Problema_2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Problema_2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <UniformGrid Rows="2" Columns="2">
        <Button Content="Left Top" Background="Azure"/>
        <Button Content="Right Top" Background="#FF629690"/>
        <Button Content="Left Bottom" Background="#FFD2F9F1"/>
        <Button Content="Right Bottom" Background="#FF7CC3B8"/>
    </UniformGrid>
</Window>
