<Window x:Class="Problema_7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Problema_7"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Padding="5"
                       FontSize="26"
                       TextAlignment="Center"
                       TextDecorations="Underline"
                       Text="Elemente de control al textului"/>
            <TextBlock Padding="5"
                       TextWrapping="Wrap">
                       În calitate de elemente de control al textului pe lângă elementul 
                       <Bold>Label</Bold> se utilizează și elementul
                       <Span FontWeight="ExtraBold" Foreground="DarkBlue">TextBlock</Span>.
            </TextBlock>
        </StackPanel>
    </Grid>
</Window>
